extends ./layout/index

block contenido

    h1(class="mt-5 text-center") #{pagina}       
    main.container.mt-5
        .row.proximos-viajes
            each obra in obras
                .col-md-6.col-lg-4.mb-4
                    .card
                        img.card-img-top(src=`img/obra_${obra.imagen}.jpg`)
                        .card-body
                            h2= obra.titulo
                            p 
                                svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    rect(x='4' y='5' width='16' height='16' rx='2')
                                    line(x1='16' y1='3' x2='16' y2='7')
                                    line(x1='8' y1='3' x2='8' y2='7')
                                    line(x1='4' y1='11' x2='20' y2='11')
                                    rect(x='8' y='15' width='2' height='2')

                                | #{obra.fecha_ejecucion} 

                            p= obra.descripcion.substr(0, 100) + '...'

                            a(href=`obras/${obra.slug}`, class="btn btn-success btn-block") Más Información
